# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Base network API key for contract verification
BASESCAN_API_KEY=your_basescan_api_key_here

# STEAK token address from Clanker (REQUIRED)
STEAK_TOKEN_ADDRESS=0x...

# Backend wallet address for tip distributions
BACKEND_WALLET_ADDRESS=0x...

# Optional: Auto-fund contract with reward tokens
FUND_CONTRACT=false
REWARD_FUND_AMOUNT=10000

# Gas reporting (optional)
REPORT_GAS=false

# RPC URLs (optional, defaults are provided in hardhat.config.js)
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org